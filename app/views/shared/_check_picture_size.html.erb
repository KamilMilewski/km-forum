<% # 'object' is a resource passed to this partial. For example @post. %>
<% # Client size validation for picture size. %>
<% object_name = object.class.to_s.underscore %>
<script type="text/javascript">
  <% #..._picture below is id of form picture input %>
  $('#<%= object_name %>_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Your picture is too big. Max is 5MB');
    }
  });
</script>
