<div class="form-group">
	<%= form_for @category do |f| %>

		<!-- Error notices -->
		<% if @category.errors.any? %>
			<div class="alert alert-danger">

				<a href="#" class="close" data-dismis="alert" aria-label="close">
					&times;</a>

				<p><strong>
					<%= pluralize(@category.errors.count, 'error') %>
					prevented this category from being created:
				</strong></p>

				<ul>
					<% @category.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>

			</div>
		<% end %>


		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title,
				class: "form-control", placeholder: "Put category title here..." %>
		</p>
		<p>
			<%= f.label :description %><br>
			<%= f.text_area :description,
				class: "form-control", placeholder: "Put category description here..." %>
		</p>
		<p>
			<%= f.submit class: "btn btn-default" %>
		</p>
	<% end %>
</div>
