<br>

<%= render 'shared/sandbox_notice' %>

	<!-- Categories index heading -->

<div class="categories-index-head">

	<!-- Icon cell -->
	<div class="cat-head-1">
	</div>

	<!-- Title & description cell -->
	<div class="cat-head-2">
		<p>Category</p>
	</div>

	<!-- Posts count cell -->
	<div class="cat-head-3">
		<p>Posts</p>
	</div>

	<!-- User avatar cell -->
	<div class="cat-head-4">
		<p>Author</p>
	</div>

	<!-- Last activity cell -->
	<div class="cat-head-5">
		<p>Activity</p>
	</div>

</div>


<% if @categories.empty? %>
	<%= render 'shared/no_content_notice', notice: "There are no categories yet." %>
<% else %>
	<%= render @categories %>
<% end %>

<br>

<!-- Pagination and new button -->
<div class="row">
  <div class="col-lg-12">
    <%= render 'new_category_button' %>
  </div>
</div>
