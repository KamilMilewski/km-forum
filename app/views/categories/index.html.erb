<br>

<%= render 'home_page_notice' %>

	<!-- Categories index heading -->

<div class="row categories-index-head">

	<!-- Icon cell -->
	<div class="col-md-1 cat-head-1">
	</div>

	<!-- Title & description cell -->
	<div class="col-md-6 cat-head-2">
		<p>Category</p>
	</div>

	<!-- Posts count cell -->
	<div class="col-md-1 hidden-sm hidden-xs cat-head-3">
		<p>Posts</p>
	</div>

	<!-- User avatar cell -->
	<div class="col-md-2 hidden-sm hidden-xs cat-head-4">
		<p>Author</p>
	</div>

	<!-- Last activity cell -->
	<div class="col-md-2 hidden-sm hidden-xs cat-head-5">
		<p>Activity</p>
	</div>

</div>


<% if @categories.empty? %>
	<div class="row">
		<div class="col-lg-12">
			<%= render 'shared/no_content_notice',
								 notice: "There are no categories." %>
		</div>
	</div>
<% else %>
	<!-- Categories index body -->
	<%= render @categories %>
<% end %>

<br>

