<% @posts.each do |post| %>
	<div class="media">
		<div class="media-left media-top">
			<a href="#">
				<img class="media-object" src='<%= image_url 'default_avatar.jpg' %>'
						alt="default_avatar">
			</a>
		</div>
		<div class="media-body">
			<p><%= post.content %></p>
		</div>

    <div class="pull-right">
  		<%= link_to "Edit",
  					edit_post_path(post),
  					class: "btn btn-warning btn-xs" %>
  		<%= link_to "Delete",
  					post,
  					method: :delete,
  					class: "btn btn-danger btn-xs" %>
    </div>
	</div>
<% end %>
