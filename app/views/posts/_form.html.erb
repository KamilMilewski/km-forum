<!-- form errors moved to partial shared/notices -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% # html: { multipart: true } is to allow image uploads. %>
		<%= form_for [@topic, @post], html: { multipart: true } do |f| %>

			<%= f.label :content %>
			<%= f.text_area :content,
											class: "form-control",
											placeholder: "Put post content here..." %>

			<br>

			<%= f.submit class: "btn btn-primary form-control" %>

      <br>
      <br>

      <%= f.file_field :picture %>

      <br>

      <%= render 'shared/delete_picture_checkbox', object: @post,
                                                   action: :edit %>

		<% end %>

    <%= render 'shared/check_picture_size', object: @post %>

	</div>
</div>
