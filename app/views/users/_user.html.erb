<div class="row users-index-body">

  <!-- User's avatar -->
  <div class="col-lg-1 user-cell-1">
    <%= render 'shared/user_avatar', user: user %>
  </div>

  <!-- User's name -->
  <div class="col-lg-4 user-cell-2">
    <h4>
      <%= link_to user.name, user %>
    </h4>
    <%= render 'users/edit_delete_user_links', user: user %>
  </div>

  <!-- User joinded -->
  <div class="col-lg-3 user-cell-3">
    <span tooltip="<%= user.activated_at %>">
      <%= time_ago_in_words(user.activated_at) %> ago
    </span>
  </div>

  <!-- User's posts -->
  <div class="col-lg-2 user-cell-4">
    <span>
      <%= user.posts.count %>
    </span>
  </div>

  <!-- User's topics -->
  <div class="col-lg-2 user-cell-5">
    <span>
      <%= user.topics.count %>
    </span>
  </div>

</div>
