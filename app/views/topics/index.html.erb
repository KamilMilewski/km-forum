<% provide :title, @category.title %>

<br>
<br>

<h3>
  <%= link_to 'Home page', root_path %> / <%= @category.title %>
  (<%= "Page: #{@topics.current_page}/#{@topics.total_pages}" %>)
</h3>

<!-- Topics table heading. -->

<div class="topics-index-head">
  <div class="topic-head-1">Topic</div>
  <div class="topic-head-2">Posts</div>
  <div class="topic-head-3">Topic owner</div>
  <div class="topic-head-4">Activity</div>
</div>

<!-- Empty category notice -->
<% if @topics.empty? %>
  <%= render 'shared/no_content_notice', notice: "There are no topics yet in this category." %>
<% else %>
  <%= render @topics %>
<% end %>

<!-- Pagination and new button -->
<div class="row">
  <div class="col-md-4">
    <%= will_paginate @topics, renderer: BootstrapPagination::Rails, class: 'pull-left' %>
  </div>
  <div class="col-md-8">
    <%= render 'topics/new_topic_button' %>
  </div>
</div>
