<div class="form-group">
	<%= form_for [@category, @topic] do |f| %>

		<!-- Error notices -->
		<% if @topic.errors.any? %>
			<div class="alert alert-warning">

				<a href="#" class="close" data-dismis="alert" aria-label="close">
					&times;</a>

				<p><strong>
					<%= pluralize(@topic.errors.count, 'error') %>
					prevented this topic from being created:
				</strong></p>

				<ul>
					<% @topic.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
				
			</div>
		<% end %>


		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title, 
				class: "form-control", placeholder: "Put topic title here..." %>
		</p>
		<p>
			<%= f.label :content %><br>
			<%= f.text_area :content,
				class: "form-control", placeholder: "Put topic content here..." %>
		</p>

		<p>
			<%= f.submit class: "btn btn-default" %>
		</p>
	<% end %>
</div>