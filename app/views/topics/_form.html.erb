<!-- form errors moved to partial shared/notices -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for [@category, @topic] do |f| %>

				<%= f.label :title %>
				<%= f.text_field :title,
													class: "form-control",
													placeholder: "Put topic title here..." %>

        <br>

				<%= f.label :content %>
				<%= f.text_area :content,
												 class: "form-control",
												 placeholder: "Put topic content here..." %>

			  <br>

        <%= f.hidden_field :user_id, value: find_current_user.id %>

				<%= f.submit class: "btn btn-primary form-control" %>
		<% end %>
	</div>
</div>
